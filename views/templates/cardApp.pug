div(class="bg-white shadow rounded-lg")
    img(class="object-cover h-72 w-full" src=`/uploads/${propiedad.imagen}` alt=`Imagen casa ${propiedad.tituloPropiedad}`)
    div(class="p-5 space-y-3")
        h3(class="text-2xl font-bold")= propiedad.tituloPropiedad 
        p(class="text-sm text-gray-600") Habitaciones: 
            span(class="text-gray-800 font-bold")= propiedad.habitacionesPropiedad 
        p(class="text-sm text-gray-600") WC: 
            span(class="text-gray-800 font-bold")= propiedad.wcPropiedad 
        p(class="text-sm text-gray-600") Precio: 
            span(class="text-gray-800 font-bold")= propiedad.precio.precioPropiedad 
        a(href=`/propiedad/${propiedad.id}` class="bg-indigo-600 w-full text-center block font-bold text-white p-2 uppercase") Ver Propiedad 