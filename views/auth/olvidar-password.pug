extends ../layout/index

block contenido 
    div.py-2
        h1.text-4xl.my-3.font-extrabold.text-center Bienes     
            span.font-normal Raices 
        h2.text-center.text-2xl.font-extrabold= pagina 

        if errores 
            div(class="max-w-md mx-auto my-3")
                each error in errores 
                    p(class="bg-red-600 text-white uppercase text-xs text-center p-2 mb-1 font-bold")= error.msg 

        div.mt-5.mx-auto.max-w-md
            div.bg-white.py-8.px-4.shadow
                form.space-y-5(method='POST' action="/auth/forgetPassword" novalidate)
                    input(type="hidden" name="_csrf" value=csrfToken)

                    div
                        label.block.text-sm.uppercase.text-gray-500.mb-2.font-bold(for="email") Email de Registro
                        input#email.w-full.px-3.py-2.border.border-gray-300.rounded-md.placeholder-gray-400(placeholder="Ingresa aquí tú email..." type="email" name="emailRegistro")
                    
                    div.flex.items-center.justify-between
                        a.text-gray-500.text-xs(href="/auth/login") ¿Ya tienes Cuenta? Inicia Sesión 
                        a.text-gray-500.text-xs(href="/auth/register") ¿No tienes Cuenta? Registrate
                    
                    input(type="submit" value="Enviar Instrucciones" class="w-full bg-indigo-600 hover:bg-indigo-700 cursor-pointer py-2 uppercase font-bold text-white")